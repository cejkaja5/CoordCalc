<Window x:Class="CoordCalc.Windows.ProjectSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoordCalc.Windows"
        xmlns:classLib="clr-namespace:CoordCalc.ClassLib"
        xmlns:controls="clr-namespace:CoordCalc.View"
        mc:Ignorable="d"
        Title="ProjectSelectorWindow" Height="450" Width="800">

    <Window.Resources>
        <classLib:Matrix4x4ToDisplayModelConverter x:Key="MatrixConverter"/>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="openProjectBtn" Content="Open existing project" HorizontalAlignment="Center" 
                Click="openProjectBtn_Click" Width="250"/>
        <Button Name="createProjectBtn" Content="Create new project" Grid.Row="1" HorizontalAlignment="Center" 
                Click="createProjectBtn_Click" Width="180"/>
        <TextBlock Name="txtBlockFilePath" Grid.Row="2" HorizontalAlignment="Center" Width="Auto"/>
        <Button Name="okBtn" Grid.Row="3" HorizontalAlignment="Center" HorizontalContentAlignment="Center" 
                Content="OK" Width="100" Click="okBtn_Click"/>
    </Grid>
</Window>
