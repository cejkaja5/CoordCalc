<Window x:Class="CoordCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoordCalc"
        xmlns:classLib="clr-namespace:CoordCalc.ClassLib"
        xmlns:controls="clr-namespace:CoordCalc.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">

    <Window.Resources>
        <classLib:Matrix4x4ToDisplayModelConverter x:Key="MatrixConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <controls:Header Grid.Row="0"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.7*"/>
            </Grid.ColumnDefinitions>

            
            <ListView Name="lvCoordsSystems" Grid.Column="0" ItemsSource="{Binding CoordSystems}" 
                      SelectionMode="Single" SelectionChanged="lvCoordsSystems_SelectionChanged"/>

            <StackPanel Grid.Column="1" HorizontalAlignment="Stretch" Margin="10" >
                <TextBlock Text="{Binding SelectedCoordSystemNameText}" Width="Auto"/>
                <TextBlock Text="{Binding SelectedCoordSystemParentText}" Width="Auto"/>
                <Border Height="1" Background="DarkSlateGray" Margin="0,5"/>
                <TextBlock Text="{Binding SelectedCoordSystemTransformationHeader}" Width="Auto"/>
                <controls:MatrixDisplay Grid.Column="1" HorizontalAlignment="Left"
                                    Matrix="{Binding SelectedCoordSystem.Matrix, Converter={StaticResource MatrixConverter}}"/>
                <TextBlock Text="{Binding SelectedCoordSystemTranslationVectorText}" Width="Auto"/>
                <TextBlock Text="{Binding SelectedCoordSystemScaleVectorText}" Width="Auto"/>
                <TextBlock Text="{Binding SelectedCoordSystemRotationText}" Width="Auto"/>
                <TextBlock Text="{Binding SelectedCoordSystemEulerAnglesText}" Width="Auto"/>

                <Border Height="1" Background="DarkSlateGray" Margin="0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Button Name="btnAddChild" Content="Add child" Width="100" Click="btnAddChild_Click"/>
                    <Button Name="btnGoToParent" Click="btnGoToParent_Click" Content="{Binding BtnGoToParentContent}" Visibility="Collapsed"
                            Width="130">
                    </Button>
                    <Button Name="btnEdit" Content="Edit" Width="60" Click="btnEdit_Click" Visibility="Visible"/>
                </StackPanel>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
