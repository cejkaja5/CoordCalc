<UserControl x:Class="CoordCalc.View.OKButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoordCalc.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             HorizontalAlignment="Center">
    
    <Grid>
        <Button HorizontalAlignment="Center" Width="80" Height="50" VerticalAlignment="Center"
                HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">
            <TextBlock Text="OK" TextAlignment="Center" Width="Auto"/>
        </Button>
    </Grid>
</UserControl>
